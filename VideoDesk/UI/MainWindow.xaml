<mui:ModernWindow x:Name="AnimePaper" x:Class="AnimaPaper.UI.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  ContentSource="/UI/Home.xaml"
                  Title="Anime Paper" Height="500" Width="800"

                  IsTitleVisible="True">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Menu">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Home" Source="/UI/Home.xaml" />
                <mui:Link DisplayName="About" Source="/UI/About.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>

</mui:ModernWindow>